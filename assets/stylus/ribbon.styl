// https://github.com/codepo8/css-fork-on-github-ribbon
#forkongithub
  display: block
  a
    background: #000
    display: block
    color: #fff
    text-decoration: none
    font-family: arial, sans-serif
    text-align: center
    font-weight: bold
    padding: 5px 40px
    font-size: 13px
    line-height: 2
    position: relative
    transition: 0.5s

    &:hover
      background: $red
      color: #fff

    &:before,&:after
      content: ''
      width: 100%
      display: block
      position: absolute
      top: 1px
      left: 0
      height: 1px
      background: #fff

    &:after
      bottom: 1px
      top: auto

  @media screen and (min-width:750px)
    position: absolute
    display: block
    top: 0
    right: 0
    width: 200px
    overflow: hidden
    height: 200px

    a
      width: 150px
      position: absolute
      top: 40px
      right: -60px
      transform: rotate(45deg)
      -webkit-transform: rotate(45deg)
      box-shadow: 4px 4px 10px rgba(0,0,0,0.8)
