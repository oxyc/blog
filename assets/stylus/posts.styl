.posts
  clean-list()

  a
    text-decoration: none
    display: block

  span
    margin-left: .5em
    text-decoration: underline

article
  h1
    margin-bottom: 0.25em

  .tags
    font-size: $small-size
    display: inline-block
    &:before
      content: '\BB'
    a
      color: $black
      &:hover
        color: $gray

  .pagination
    clean-list()
    text-align: center
    li
      display: inline-block
    a
      font-family: $serif
      font-style: italic
      color: $gray

      &:hover
        color: $black
    .previous
      margin-right: .25em
    .next
      margin-left: .25em
